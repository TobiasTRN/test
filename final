        function addContact() {
            // Lien vers ton fichier vCard h√©berg√© sur GitHub
            const vcfUrl = "https://urlr.me/hc3Hzk";
            
            // Cr√©er un lien de t√©l√©chargement pour le fichier vCard
            const link = document.createElement('a');
            link.href = vcfUrl; // Lien vers ton fichier .vcf
            link.download = "contact.vcf";  // Nom du fichier vCard
            document.body.appendChild(link);
            
            // Simuler un clic sur le lien pour t√©l√©charger le fichier
            link.click();
            
            // Nettoyer le lien apr√®s l'avoir cliqu√©
            document.body.removeChild(link);

            // Afficher le formulaire apr√®s l'ajout du contact
            document.getElementById("formContainer").classList.remove("hidden");
        }

        document.getElementById("contactForm").addEventListener("submit", function(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            fetch("https://script.google.com/u/0/home/projects/1HcHrrTxTud2UfgsI-jRRLFLl1aENT4IYvJY-oLfGpLw4IgaIkcHmH2R7/edit", {
                method: "POST",
